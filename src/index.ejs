<!DOCTYPE html>
<html>

<head>
  <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>
    <%= htmlWebpackPlugin.options.title %>
  </title>
  <link href="https://fonts.googleapis.com/css?family=Open+Sans|Roboto" rel="stylesheet">
</head>

<body>
  <h1 class="u-display--hidden"><%= htmlWebpackPlugin.options.title %></h1>
  <div id="app" class="app">
    <aside class="sidebar">
      <% include src/html/controls-bar %>
      <% include src/html/navigation %>
    </aside>
    <main class="window">
      <%= htmlWebpackPlugin.options.data %>

      <ul>
        <% htmlWebpackPlugin.options.data.forEach(function(issue){ %>
          <li>
            <%- issue.title %>
            <%- issue.solved %>
          </li>
        <%});%>
     </ul>      
    </main>
  </div>
</body>
</html>